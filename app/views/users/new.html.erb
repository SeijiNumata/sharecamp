<%= page_heading "ユーザー入力" %>
<div class=user-new-container>
  <% if @event!=nil %>
  <h1 class="user-new-title"><%= @event.name %>の<br>持ち物分担リストへようこそ</h1>
  <%end %>
  <%= form_with(model: @user) do |form| %>

  <div class="nickname-form">
    <label>あなたのニックネームを入力してください</label>
    <% if @user.errors.any? %>
    <div id="error_explanation">

      <ul>
        <% @user.errors.each do |user| %>
        <li class="user-new-error-message"><%= user.full_message  %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <div class="field">
      
      <%= form.text_field :name, class:"text_field", value:current_user&.name %>
    </div>

    <div class="actions">
      <%= form.submit "持ち物分担リストへ", class:"nickname-submit-button"%>
    </div>
    <% end %>
  </div>
</div>
